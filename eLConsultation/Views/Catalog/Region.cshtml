@(Html.Kendo().Grid<eLConsultation.Data.RegionItem>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.RegionID).Visible(false);
        columns.Bound(p => p.RegionName);
        columns.Command(command => { command.Edit(); command.Destroy(); }).Width(250);
    })
    .ToolBar(toolbar => toolbar.Create())
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable()
    .Sortable()
    .Scrollable()
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Events(events => events.Error("error_handler"))
        .Model(model => model.Id(p => p.RegionID ))
        .Create(update => update.Action("RegionCreate", "Catalog"))
        .Read(read => read.Action("RegionSelect", "Catalog"))
        .Update(update => update.Action("RegionUpdate", "Catalog"))
        .Destroy(update => update.Action("RegionDelete", "Catalog"))
    )
)
<script type="text/javascript">
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
            $("#grid").data("kendoGrid").dataSource.read();
        }
    }
</script>

