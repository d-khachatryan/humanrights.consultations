<script id="template" type="text/kendo-tmpl">
        @(Html.Kendo().Grid<eLConsultation.Data.IssueSetItem>()
        .Name("grid_#=ResidentID#") // template expression, to be evaluated in the master context
          .Columns(columns =>
          {
              columns.Bound(o => o.IssueID).Hidden();
              columns
                  .Template(@<text></text>)
                  .ClientTemplate("<a href='" + Url.Action("InitOralConsultation", "OralConsultation", new { issueID = "\\#= IssueID \\#" }) + "'>\\#= IssueName \\#</a>")
                  .Title("Խնդրի անվանում");
              //columns.Bound(o => o.IssueName).Width(170);
              columns.Bound(o => o.IssueTypeName);
              columns.Bound(o => o.IssueDate).Width(98);
              //columns.Bound(o => o.IssueDescription).Width(190);
          })

          .DataSource(dataSource => dataSource
              .Ajax()
              //.PageSize(5)
              .Read(read => read.Action("GetIssesSetItemsByResidentID", "Issue", new { residentID = "#=ResidentID#" }))
                      )
          //.Pageable()
          //.Sortable()
         .ToClientTemplate())
</script>





<script type="text/javascript">



    function Search() {
        $("#grResidentMobile").data("kendoGrid").dataSource.read();
        return false;
    }
    function Clear() {
        $("#FirstName").val("");
        $("#LastName").val("");
        $("#grResidentMobile").data("kendoGrid").dataSource.read();
        return false;
    }
    function getParameters() {
        return {
            firstName: $("#FirstName").val(),
            lastName: $("#LastName").val()
        };
    }

</script>

<script>
    //Correction Grid Height
    var winHeight = $(window).height();
    var headerHeight = $("header.navbar").height();
    $(".k-grid").height(winHeight - headerHeight - 60);

    //Corection Toolbar height
    if ($(window).width() > 550) {
        $(".dispatcherGridToolbar").height($("div#searchInputs").height());
    }

</script>